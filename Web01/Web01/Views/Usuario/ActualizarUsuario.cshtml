@model Web01.Entities.UsuarioEnt
@{
    ViewBag.Title = "Actualizar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Informacion del usuario</h4>
        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-secondary" role="alert" style="text-align:center">
                @ViewBag.Mensaje
            </div>
        }

        @using (Html.BeginForm("ActualizarUsuario", "Usuario", FormMethod.Post, new { @class = "pt-3" }))
        {

            @Html.HiddenFor(m => m.ConUsuario)
            <div class="form-group">
                <label for="Identificacion">Identificacion</label>
                @Html.TextBoxFor(m => m.Identificacion, new { @onkeyup = "ConsultarNombre()", @type = "text", @class = "form-control form-control-lg", @placeholder = "Identificacion" })
            </div>
            <div class="form-group">
                <label for="Nombre">Nombre</label>
                @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @readonly = "readonly", @class = "form-control form-control-lg", @placeholder = "Nombre" })
            </div>
            <div class="form-group">
                <label for="Correo">Correo</label>
                @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control form-control-lg", @placeholder = "Correo" })
            </div>
            <div class="form-group">
                <label for="ConProvincia">Provincia</label>
                @Html.DropDownListFor(m => m.ConProvincia, ViewBag.Provincias as List<SelectListItem>, new { @type = "text", @class = "form-control form-control-lg", @placeholder = "Provincia" })
            </div>
            <button type="submit" class="btn btn-primary mr-2">Procesar</button>
        }
    </div>
</div>

<script src="~/FuncionesJS/ConsultarNombreApi.js"></script>
