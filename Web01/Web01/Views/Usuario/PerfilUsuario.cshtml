@model Web01.Entities.UsuarioEnt
@{
    ViewBag.Title = "PerfilUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Informacion general</h4>
        <form class="forms-sample">
            <div class="form-group">
                <label for="exampleInputName1">Identificacion</label>
                @Html.TextBoxFor(m => m.Identificacion, new { @type = "text", @class = "form-control form-control-lg", @placeholder = "Identificacion" })
            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Nombre</label>
                @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @class = "form-control form-control-lg", @placeholder = "Nombre" })
            </div>
            <div class="form-group">
                <label for="exampleInputPassword4">Correo</label>
                @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control form-control-lg", @placeholder = "Correo" })
            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Provincia</label>
                @Html.DropDownListFor(m => m.ProvinciaDescripcion, ViewBag.Provincias as List<SelectListItem>, new { @type = "text", @class = "form-control form-control-lg", @placeholder = "Provincia" })
            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Rol</label>
                @Html.TextBoxFor(m => m.RolDescripcion, new { @type = "text", @class = "form-control form-control-lg", @placeholder = "Rol" })
            </div>
            <button type="submit" class="btn btn-primary mr-2">Procesar</button>
        </form>
    </div>
</div>