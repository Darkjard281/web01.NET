@model Web01.Entities.ProductoEnt
@{
    ViewBag.Title = "RegistrarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Agregar Producto</h4>
            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-secondary" role="alert" style="text-align:center">
                    @ViewBag.Mensaje
                </div>
            }

            @using (Html.BeginForm("RegistrarProducto", "Producto", FormMethod.Post, new { @class = "pt-3", @enctype = "multipart/form-data" }))//  @enctype = "multipart/form-data" requerido para pasar imagenes
            {

                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @class = "form-control form-control-lg", @placeholder = "Nombre" })
                </div>
                <div class="form-group">
                    <label for="Descripcion">Descripcion</label>
                    @Html.TextBoxFor(m => m.Descripcion, new { @type = "text", @class = "form-control form-control-lg", @placeholder = "Descripcion" })
                </div>
                <div class="form-group">
                    <label for="Precio">Precio</label>
                    @Html.TextBoxFor(m => m.Precio, new { @type = "number", @class = "form-control form-control-lg", @placeholder = "Precio" })
                </div>
                <div class="form-group">
                    <label for="Cantidad">Cantidad</label>
                    @Html.TextBoxFor(m => m.Cantidad, new { @type = "number", @class = "form-control form-control-lg", @placeholder = "Cantidad" })
                </div>
                <div class="form-group">
                    <label for="Cantidad">Cantidad</label>
                    <input type="file" id="ImgProducto" name="ImgProducto" class="form-control form-control-lg"/><!--Con Razor se agrega el ID y el nombre por defecto. Al no utilizar sus etiquetas se deben agregar estas-->
                </div>


                <button type="submit" class="btn btn-primary mr-2">Agregar</button>
            }
        </div>
    </div>
</div>