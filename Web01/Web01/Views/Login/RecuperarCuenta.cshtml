@model Web01.Entities.UsuarioEnt

@{
    ViewBag.Title = "RecuperarCuenta";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <img src="~/Template/images/logo.svg" alt="logo">
                </div>
                    @using (Html.BeginForm("RecuperarCuenta", "Login", FormMethod.Post, new { @class = "pt-3" }))
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Identificacion, new { @type = "text", @class = "form-control form-control-lg", @placeholder = "Identificacion" })
                        </div>
                        <div class="mt-3">
                            <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Recuperar Cuenta" />
                        </div>
                        <div class="text-center mt-4 font-weight-light">
                            Ya tienes una cuenta? <a href=@Url.Action("Login","Login") class="text-primary">Ingresar</a>
                        </div>
                    }
            </div>
        </div>
    </div>
</div>


