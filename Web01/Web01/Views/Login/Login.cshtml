
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}



        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/Template/images/logo.svg" alt="logo">
                            </div>
                            <form class="pt-3">
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Identificacion">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Contraseña">
                                </div>
                                <div class="mt-3">
                                    <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="~/Template/index.html">Iniciar Sesion</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    No tienes unas cuenta? <a href=@Url.Action("RegistrarCuenta","Login") class="text-primary">Registrarse</a>
                                    <br />
                                    Olvidaste tu contraseña? <a href=@Url.Action("","Login") class="text-primary">Recuperar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

